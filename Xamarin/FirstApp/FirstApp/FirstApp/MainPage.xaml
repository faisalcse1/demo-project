<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.MainPage">
    <StackLayout Padding="10">
        <StackLayout>
            <Label x:Name="LabelInfo" 
           Text="Hello World"
           TextColor="Green" 
           FontSize="Large"
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        </StackLayout>
        
        <Label Text="Anoter label"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="Center"
           TextColor="Red"/>
        <Label Text="Anoter label 1"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="Center"
           TextColor="Red"/>

        <Label Text="Name" FontSize="Large" />
        <Entry x:Name="Name" Placeholder="Enter your name"/>
        <Button Text="Show" BackgroundColor="SkyBlue"
                TextColor="White" x:Name="ShowButton" 
                Clicked="ShowButton_Clicked"
                CornerRadius="20"
                />
        

        <Label x:Name="lblName" 
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

    </StackLayout>

    


</ContentPage>
