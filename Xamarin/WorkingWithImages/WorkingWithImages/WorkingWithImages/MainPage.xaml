<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkingWithImages"
             x:Class="WorkingWithImages.MainPage">
            

    <StackLayout>
        <Label  Text="Image from Url"
                FontSize="Large"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>

        <Image x:Name="imgUser" 
              HeightRequest="200"
               WidthRequest="200"/>

        <Label Text="Image from local resource"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <Image x:Name="imgLocalResource"
               HeightRequest="200"
               WidthRequest="200"/>

        
    </StackLayout>

</ContentPage>
